        <xpath expr="//div[hasclass('border-top')]" position="replace">
        </xpath>
    </template>

    <!-- menu -->
    <menuitem id="cy_operate_menu" name="运营中心" sequence="10" web_icon="cy_public,static/src/description/operate_menu_icon.png" />
