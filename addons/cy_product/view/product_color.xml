<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>
		<!-- Add you code here -->
		<!-- cy.product.color form view -->
		<record id="cy_product_color_view_form" model="ir.ui.view">
			<field name="name">cy.product.color.view.form</field>
			<field name="model">cy.product.color</field>
			<field name="arch" type="xml">
				<form string="商品颜色">
					<sheet>
						<group>
							<!-- Add your fields here -->
							<field name="name" />
							<field name="display_name" />
							<field name="color_img" widget="cy_image_field" />
							<field name="color_rgb" widget="color" />
							<field name="active" />
							<field name="parent_id" />
							<field name="sequence" />
							<field name="is_in_filter" />
							<field name="is_default_in_filter" />
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<!-- cy.product.color tree view -->
		<record id="cy_product_color_view_tree" model="ir.ui.view">
			<field name="name">商品颜色</field>
			<field name="model">cy.product.color</field>
			<field name="arch" type="xml">
				<tree>
					<!-- Add your fields here -->
					<field name="id" />
					<field name="name" />
					<field name="display_name" />
					<field name="color_img" widget="cy_image_field" />
					<field name="color_rgb" widget="color" />
					<field name="active" />
					<field name="parent_id" />
					<field name="sequence"/>
					<field name="is_in_filter" />
					<field name="is_default_in_filter" />
				</tree>
			</field>
		</record>
		<!-- cy.product.color action window -->
		<record id="cy_product_color_action" model="ir.actions.act_window">
			<field name="name">商品颜色</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">cy.product.color</field>
			<field name="view_mode">tree,form</field>
		</record>
	</data>
</odoo>