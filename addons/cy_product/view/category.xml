<?xml version='1.0' encoding='utf-8'?>
<odoo>
	<data>
		<!-- cy.product.category search view -->
		<record id="cy_product_category_view_search" model="ir.ui.view">
			<field name="name">cy.product.category.view.search</field>
			<field name="model">cy.product.category</field>
			<field name="arch" type="xml">
				<search string="商品分类">
					<!-- Add your fields here -->
					<field name="full_name" string="名称" filter_domain="['|', ('full_name', 'ilike', self), ('display_full_name', 'ilike', self)]" />
					<searchpanel>
						<field name="parent_id" color="#875A7B" enable_counters="1" />
					</searchpanel>
				</search>
			</field>
		</record>
		<!-- cy.product.category form view -->
		<record id="cy_product_category_view_form" model="ir.ui.view">
			<field name="name">cy.product.category.view.form</field>
			<field name="model">cy.product.category</field>
			<field name="arch" type="xml">
				<form string="商品分类">
					<sheet>
						<group>
							<!-- Add your fields here -->
							<field name="name" />
							<field name="code" />
							<field name="display_name" />
							<field name="active" />
							<field name="parent_id" />
							<field name="size_image" widget="cy_image_field" />
						</group>
						<notebook>
							<page string="子分类">
								<field name="children">
									<field name="code" />
									<field name="full_name" />
									<field name="display_full_name" />
								</field>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>

		<!-- cy.product.category tree view -->
		<record id="cy_product_category_view_tree" model="ir.ui.view">
			<field name="name">cy.product.category.view.tree</field>
			<field name="model">cy.product.category</field>
			<field name="arch" type="xml">
				<tree>
					<!-- Add your fields here -->
					<field name="sequence" widget="handle" />
					<field name="id" />
					<field name="code" />
					<field name="name" />
					<field name="display_name" />
					<field name="active" />
					<field name="full_name" />
					<field name="display_full_name" />
					<field name="size_image" widget="cy_image_field"/>
				</tree>
			</field>
		</record>
		<record id="cy_product_category_action" model="ir.actions.act_window">
			<field name="name">商品分类</field>
			<field name="res_model">cy.product.category</field>
			<field name="view_mode">tree,form</field>
			<field name="context">{}</field>
		</record>
	</data>
</odoo>